					div(id='vidForm')
						form.video-form(id='previewEmailSubscribe', action='', role='form')
							input#email(spellcheck='off', type='text', class='video-input', name='email', autocomplete='off', placeholder='info@hackfsu.com', value=email)
							button(type='submit', id='submit', class='video-btn') Get Notified
							div(style='clear: both')




					
